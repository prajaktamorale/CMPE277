<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.example.praj.broadcastdemo.TempHum">

    <TextView
        android:id="@+id/temptext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="-512dp"
        app:layout_constraintVertical_bias="0.017" />

    <TextView
        android:id="@+id/temperature"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="69dp"
        android:text="@string/temp"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/temptext" />

    <EditText
        android:id="@+id/temp_input"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="59dp"
        android:background="@color/white"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@+id/temperature"
        app:layout_constraintTop_toBottomOf="@id/temptext" />

    <TextView
        android:id="@+id/humidity"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="69dp"
        android:inputType="text"
        android:text="@string/humid"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/temperature" />

    <EditText
        android:id="@+id/humidity_input"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="59dp"
        android:background="@color/white"
        android:inputType="text"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@+id/temperature"
        app:layout_constraintTop_toBottomOf="@id/temp_input" />

    <Button
        android:id="@+id/button1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="69dp"
        android:background="@color/green"
        android:text="@string/set"
        android:onClick="Set"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/humidity" />

    <Button
        android:id="@+id/Cancel"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="49dp"
        android:background="@color/green"
        android:onClick="Cancel"
        android:text="@string/cancel"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintHorizontal_bias="0.964"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/SetConfiguration"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/humidity_input" />




</android.support.constraint.ConstraintLayout>
